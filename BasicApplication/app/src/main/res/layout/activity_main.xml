        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="버튼"
        android:textSize="30sp"
        android:onClick="btnClick2"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="버튼2"
        android:textSize="30sp"
        android:id="@+id/btn"/>


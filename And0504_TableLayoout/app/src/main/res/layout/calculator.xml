<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*">

        <TableRow>
            <EditText
                android:id="@+id/etNum1"
                android:textSize="20sp"
                android:hint="숫자 1입력"
                android:layout_span="5"
                />
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/etNum2"
                android:textSize="20sp"
                android:hint="숫자 2입력"
                android:layout_span="5"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:textSize="20sp"
                />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:textSize="20sp"
                />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btnAdd"
                android:layout_span="5"
                android:text="더하기"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btnSub"
                android:layout_span="5"
                android:text="빼기"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btnMul"
                android:layout_span="5"
                android:text="곱하기"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btnDiv"
                android:layout_span="5"
                android:text="나누기"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/tvResult"
                android:text="계산결과: "
                android:textSize="30sp"
                android:layout_span="5"
                android:textColor="#FF0000"
                />

        </TableRow>
    </TableLayout>


</LinearLayout>